bg_active_menu = #fff
active_menu_link_color = #333

.pure-menu.pure-menu-open
  background: none
  margin: 0
  font-size: 0
  li
    font-size: 18px
    border-right: 1px solid #999
    padding: 0 1px
    background: none
  li:last-child
    border-right: 0
  a
    color: text_color
    padding: 3px 26px
    min-width: 2em
    text-align: center
    line-height: 1
  a:hover, a:active,
  &.pure-menu-selected a
    background: active_color
    color: #222

.header-nav
  background: bg_color
  background-image: linear-gradient(#111, #000)
  padding: 9px
  margin: 20px 0 30px
  .pure-menu.pure-menu-open li
    border-right-style: dotted
    border-right-color: #eee 

.pure-menu .has-submenu
  a
    padding-right: 22px
.has-submenu
  position: relative
  .tri-down
    border-top-color: color_primary
  a:hover .tri-down
    border-top-color: darken(color_primary, 10%)
  .submenu
    top: 26px
    left: 1px
    right: 1px
    visibility: visible
    display: none
    box-shadow(0 2px 2px rgba(0,0,0,.3))
    li
      background: bg_active_menu
      padding-top: 2px
    a
      padding: 4px 20px
      color: active_menu_link_color

.has-submenu.active
  a
    color: active_menu_link_color
    background: bg_active_menu
  .submenu
    display: block


