html, body
  height: 100%

body
  background: #fbfbfb url(../img/bg-main.jpg) no-repeat 50% 0
  max-height: 1235px
  overflow: hidden
  background-size(cover)

.body-wrapper
  overflow-y: scroll
  height: 100%
  position: relative
  z-index: 0

.container
  min-height: 100%
  max-width: 1040px 
  margin: 0 auto
  position: relative
  padding-bottom: 80px
  box-sizing(border-box)

.pure-menu.pure-menu-open
  background: bg_color
  margin: 0
  li
    border-right: 1px dotted #eee
    padding-right: 5px
    background: bg_color
    a
      color: text_color
      padding: 3px 25px
      line-height: 1
    a:hover, a:active,
    &.pure-menu-selected a
      background: active_color
      color: #222
  li:last-child
    border-right: 0

.header-nav
  background: bg_color
  padding: 6px 10px
  margin: 20px 0 30px
  font-size: 17px

#footer
  background: bg_color
  text-align: center
  position: absolute
  bottom: 40px
  width: 100%
  font-size: 13px
  padding: 5px
  color: text_color
  .pure-menu
    display: inline
    margin-right: 60px
    li
      border-right: 1px solid #ddd
    li:last-child
      border-right: 0
    a
      padding: 0 10px
    a:hover, a:active
      background: #eee
  .copyright
    font-size: 12px
    line-height: 18px


#main
  min-height: 200px


.big-alert
  margin: 100px 0 100px auto
  width: 400px
  padding: 50px
  text-align: center
  font-size: 1.6em
  background: #000
  background: rgba(0,0,0,0.9)
  color: #fff


.mod
  background: bg_color
  color: text_color
  padding: 15px
  font-family: font_serif
  h2
    font-size: 20px
    font-weight: normal
    font-style: italic
    margin: 0 0 20px
    padding: 5px 5px 6px
    border-bottom: 1px solid color_primary
.sinked
  margin: 250px 0 20px auto
  max-width: 560px
