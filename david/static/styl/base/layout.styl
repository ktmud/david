body
  color: #fff;
  font-size: 15px;

.container
  max-width: 1040px 
  margin: 20px auto;

.pure-menu.pure-menu-open
  background: #000;
  margin: 0;
  li
    border-right: 1px dotted #eee;
    padding-right: 5px;
    background: #000;
    a
      color: #fff;
      padding: 3px 25px;
      line-height: 1;
    a:hover, a:active,
    &.pure-menu-selected a
      background: #1192dd
      color: #222;
  li:last-child
    border-right: 0;

.header-nav
  background: #000;
  padding: 6px 10px;
  margin: 20px 0 30px;
  font-size: 17px;

#footer
  background: #000;
  text-align: center;
  font-size: 13px;
  padding: 5px;
  .pure-menu
    display: inline;
    margin-right: 60px;
    li
      border-right: 1px solid #ddd;
    li:last-child
      border-right: 0;
    a
      padding: 0 10px;
    a:hover, a:active
      background: #eee;
  .copyright
    font-size: 12px;
    line-height: 18px;
