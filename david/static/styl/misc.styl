.header-sns
  float right
  margin-top: -40px



html, body
  height: 100%

.bg-logo
  position fixed
  display: block
  z-index -1
  left 20px
  top 30px
  img
    img-responsive()
  &:hover
    background: none


.body-bg
  z-index: -1
  position: fixed
  top: 0
  left 0
  width: 100%
  height: 120%
  background: #fbfbfb url(../img/bg-main.jpg) no-repeat 50% 0 fixed
  background-size(cover)
  -ms-behavior: url('./backgroundsize.min.htc');



.home-carousel
  .carousel-control
    width: 40px
  .carousel-inner
    height: 300px
    min-height: 160px
