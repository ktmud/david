.navbar
  margin-top: 30px;

.search-form
  margin-top: 8px

.attachment-form {
  margin: 40px 0;
}

#main > .nav-tabs {
  margin-bottom: 40px;
}
form.icon {
  display: inline-block;
}
.icon button {
  border: none;
  background: none;
}
.select2-container { 
  padding: 0;
  border: 0;
}
.col-lg-10 {
  position: static;
}
.datepicker {
  box-sizing: content-box;
}


.uploaded-item
  padding: 10px 0
  &:hover
    background: #f9f9f9

  img
    width: 100%
    min-height: 40px
  .detail
    position: relative
    padding-right: 30px
  .desc, .title
    position: relative
  .saved
    absolute: right 6px top 7px
    padding-top: 5px
    display: inline-block
    display: none;
  .remove-item
    absolute: right 10px top 5px

.uploaded
  .sortable-dragging
    opacity(0.5)
  .sortable-placeholder
    border: 4px dashed #dfdfdf
    height: 60px
    margin: 20px 0


.fileinput-button {
  position: relative;
  overflow: hidden;
}
.fileinput-button input {
  position: absolute;
  top: 0;
  right: 0;
  margin: 0;
  opacity: 0;
  filter('alpha(opacity=0)');
  transform(translate(-300px, 0) scale(4))
  font-size: 23px;
  direction: ltr;
  cursor: pointer;
}

.inline-uploader
  .title
    margin-bottom: 15px
