.magazine-carousel
  margin-bottom: 20px
  padding-bottom: 20px
  border-bottom: 1px solid color_primary
  .carousel-inner
    min-height: 300px

.magazine-switcher
  height: 142px
  overflow: hidden;
  position: relative;
  ul
    white-space: nowrap;
    position: absolute;
  li
    margin-right: 6px
    height: 150px
    margin-bottom: 20px
    &:last-child
      margin-right: 0
    a
      display: inline-block
      line-height: 0
      border: 1px solid bg_color
      opacity(0.5)
    &.active a
      border: 1px solid color_primary
      opacity(1)
  img
    background: #333
    width: 110px
    height: 140px


.photos-grid
  margin-left: -15px
  margin-right: -15px
