
.img-responsive
  max-width: 100%
  height: auto

.container, .modal
  margin-left: 200px
.modal-dialog
  margin-left: 0

@media (max-width: 1200px)
  .container
    margin-right: 20px

@media below_md
  .sinked
    margin-top: 200px
  .container
    min-height: 0
  .footer-right
    display: block
    margin-top: 5px
    float: none
  #footer
    .pure-menu
      margin-right: 0

@media below_sm
  .bg-logo
    display: none
  .header-sns
    display: none
  .header-nav
    margin-left: 0
    max-width: sinked_width
  .container
    margin-right: 0
    margin-left: 0
  .hidden-sm
    display: none
  .sinked
    margin-top: 100px
    margin-left: 0
  #footer
    bottom: 0
  .header-nav .pure-menu.pure-menu-open > li
    width: 94px
  .mod .news-list
    margin-left: 15px
  .header-brand .logo
    width: 150px
    margin-left: 10px
  .home-carousel .carousel-inner
    height: auto

@media (max-width: 580px)
  .header-nav
    margin-right: 0

@media below_xs
  .hidden-xs
    display: none
  .news-list .pic img
    width: 75px
    height: 75px
  .news-list .detail
    margin-left: 90px
    font-size: 14px
    p
      font-size: 13px
  .paginator
    font-size: 0
    a, span, strong
      font-size: 14px

@media only screen and (orientation: portrait) and (device-width: 320px), (device-width: 768px) {
  .body-bg {
    background-size: 200% auto;
  }
}
 
@media only screen and (orientation: landscape) and (device-width: 320px), (device-width: 768px) {
  .body-bg {
    background-size: 120% auto;
  }
}
